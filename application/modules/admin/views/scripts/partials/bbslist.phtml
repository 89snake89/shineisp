
<?php if ($this->records->count()):?>
	
	<ul class="media-list">
		<?php foreach ( $this->records as $record ) : ?>
		<li class="media">
		    <div class="pull-left">
		    	<?php echo !empty($record->customer_id) ? Shineisp_Commons_Gravatar::get_gravatar ( $record->Customers->email, 60 ) : Shineisp_Commons_Gravatar::get_gravatar ( $record->Isp->email, 60 ); ?>
		    </div>
		    <div class="media-body">
		    	<h4 class="media-heading"><?php echo !empty($record->customer_id) ?  $record->Customers->lastname . " " . $record->Customers->firstname :  $record->Isp->company; ?></h4>
		    	<small><?php echo  $record->dateposted; ?></small>
		    	<div class="message-body"><?php echo  $record->message; ?></div>		
		    </div> 
		</li>
		<?php endforeach;?>
	</ul>
<?php else: ?>
    <div class="alert alert-info"><?php echo $this->translate('No Records')?></div>
<?php endif; ?>
