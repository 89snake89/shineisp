<?xml version="1.0" encoding="UTF-8"?>
<layout>

	<!-- Default configuration of the whole project -->
	<general template="1column">
		<head>
		    <!-- JS files to be include in every pages-->
            <js override="1">/resources/js/jquery/jquery-1.8.3.js</js>  
            <js override="1">/resources/js/jquery/jquery-ui-1.9.2.custom.min.js</js>
            <js override="1">/resources/js/jquery/jquery.cookie.js</js>
            
            <!-- CSS files to be include in every pages-->
            <css override="1">/resources/js/css/jquery-ui-1.8.16.custom.css</css> 
			
			<!--Bootstrap CSS framework conditional stylesheet for all the brower to be include in every frontend pages-->
            <css override="1">/resources/bootstrap/css/bootstrap.min.css</css>
            <js  override="1">/resources/bootstrap/js/bootstrap.min.js</js>
		</head>
	</general>
	
    <!-- Admin Template Section -->
	<admin>
		<!-- Common files called at the start of the admin module and will be APPENDED to the page with the GENERAL head items -->
